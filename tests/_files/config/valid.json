{
  "prepare-commit-msg": {
    "enabled": true,
    "actions": []
  },
  "commit-msg": {
    "enabled": true,
    "actions": []
  },
  "pre-commit": {
    "enabled": true,
    "actions": [
      {
        "action": "phpunit --configuration=build/phpunit-hook.xml",
        "config": {
          "label": "PHPUnit",
          "allow-failure": true
        },
        "options": {}
      }
    ]
  },
  "pre-push": {
    "enabled": false,
    "actions": [
      {
        "action": "phpstan analyse src",
        "config": {
          "label": "PHPStan"
        }
      }
    ]
  }
}
